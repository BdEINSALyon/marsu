%h1.text-center.display-1 Stand VA

#questions
  - if @student&.study_year&.year == 1
    #he-want.row
      %h1.m-y-2.col-md-12.text-center.display-4 Que souhaite-t-il ?
      .col-md-6
        #he-want-VA.btn.btn-lg.btn-primary.btn-block{class: [('btn-danger' if @student.wei_registrations.any?)]} VA
      .col-md-6
        #he-want-VA-WEI.btn.btn-lg.btn-primary.btn-block{class: (@student.wei_registrations.any? ? 'btn-success' : (@student.minor? ? 'btn-warning' : 'btn-success'))} VA et WEI
    #cheque.row.hidden
      %h1.m-y-2.col-md-12.text-center.display-4
        As-t-on déjà son chèque de
        %span.price 130
        € ?
      .col-md-6
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Chèque'
          = hidden_field_tag :products, 'VA-WEI'
          %button#yes-cheque.btn.btn-lg.btn-primary.btn-block{type: :submit} OUI
      .col-md-6
        #no-cheque.btn.btn-lg.btn-primary.btn-block NON
    #payment.row.hidden
      %h1.m-y-2.col-md-12.text-center.display-4
        Comment paye-t-il
        %span.price 130
        € ?
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Carte Bancaire'
          = hidden_field_tag :products, 'VA-WEI'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Carte Bancaire
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Espèces'
          = hidden_field_tag :products, 'VA-WEI'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Espèces
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Chèque'
          = hidden_field_tag :products, 'VA-WEI'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Chèque
  - else
    #payment_3A.row
      %h1.m-y-2.col-md-12.text-center.display-4
        Comment paye-t-il
        %span.price 20
        € ?
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Carte Bancaire'
          = hidden_field_tag :products, 'VA'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Carte Bancaire
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Espèces'
          = hidden_field_tag :products, 'VA'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Espèces
      .col-md-4
        = form_tag registration_pay_path, method: :post do
          = hidden_field_tag :method, 'Chèque'
          = hidden_field_tag :products, 'VA'
          %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Chèque